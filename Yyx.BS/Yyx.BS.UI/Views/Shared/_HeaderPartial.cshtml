@using eModel = Yyx.BS.Models;

<nav class="navbar navbar-default navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                @{
                    eModel.User user = ViewBag.User;
                    if (user != null)
                    {
                        var userName = user.UserName;
                        if (string.IsNullOrEmpty(userName))
                        {
                            userName = user.CellPhone;
                        }
                        <li><a href="/UserCenter">@userName</a><input name="CurrentUserID" type="hidden" value="@user.UserID" /></li>
                        <li><a href="/UserCenter/MyOrder">我的订单</a></li>
                        <li><a href="/UserCenter/MyOrderBook">购物车<span id="bookNum" class="badge">@Yyx.BS.Controller.DataUtils.GetBookNumber(user.UserID)</span></a></li>
                        <li><a href="/Login/LoginOut">[退出]</a></li>
                    }
                    else
                    {
                        <li><a href="/Login">亲，请登录</a></li>
                        <li><a href="/Register">免费注册</a></li>
                    }
                }
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li class="active"><a href="/Home/">首页</a></li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">所有宝贝 <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        @{
                            List<eModel.ProductCategory> list = Yyx.BS.Controller.DataUtils.GetProductCategoryList();
                            List<eModel.ProductCategory> flist = list.FindAll(o => o.ParentID == null);
                            foreach (var f in flist)
                            {
                                <li><a href="/Home/ShowProduct?id=@f.ProductCategoryID">@f.CategoryName</a></li>
                                List<eModel.ProductCategory> slist = list.FindAll(o => o.ParentID == f.ProductCategoryID);
                                foreach (var s in slist)
                                {
                                    <li><a href="/Home/ShowProduct?id=@s.ProductCategoryID">@s.CategoryName</a></li>
                                }
                                <li role="separator" class="divider"></li>
                            }

                        }
                        <li><a href="/Home/ShowProduct">所有商品</a></li>
                    </ul>
                </li>
            </ul>
        </div><!--/.nav-collapse -->
    </div>
</nav>